{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "itolearn",
  "version": "0.1.0",
  "identifier": "com.itolearn.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "visible": true,
        "devtools": true,
        "title": "工院云课堂",
        "width": 1080,
        "height": 700,
        "minWidth": 420,
        "minHeight": 420,
        "transparent": true,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English"
        ],
        "displayLanguageSelector": true,
        "installMode": "currentUser"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    }
  }
}
